<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:layout_marginTop="@dimen/maginTop10">

        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="转让件数："
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/tv_amount"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:background="@null"
            android:hint="请输入转让件数"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33">

        <TextView
            android:id="@+id/tv_lable2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="价格区间："
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:layout_marginLeft="4dp"
            android:id="@+id/et_price_low"
            android:layout_width="wrap_content"
            android:maxWidth="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="numberDecimal"
            android:hint="请输入最低金额"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="——"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/et_price_high"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="120dp"
            android:background="@null"
            android:hint="请输入最高金额"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:layout_marginTop="33dp"
        android:background="@drawable/board_theme_bg_radio5"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal" />
</LinearLayout>