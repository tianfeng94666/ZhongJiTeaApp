<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/layout_title"/>
    <LinearLayout
        android:background="@color/theme_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginTop="29dp"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/text_color"
            android:text="发送验证码到手机号"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_phonenumber"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_color"
        android:text=""
        android:inputType="phone"
        android:gravity="center"
        android:background="@null"
        android:hint="请输入手机号"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/margin33"
            android:layout_marginRight="115dp"
            android:layout_marginTop="8dp">

            <TextView

                android:id="@+id/textView"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="验证码    "
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_normal" />

            <EditText
                android:id="@+id/et_login_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin16"
                android:background="@null"
                android:gravity="bottom"
                android:singleLine="true"
                android:hint="请输入验证码"
                android:textColor="@color/text_color"
                android:textColorHint="@color/color_line"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin33"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tv_login_code"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_login_code"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/board_light_oregon"
            android:gravity="center"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        >

        <TextView

            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="重置密码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/et_reset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin16"
            android:background="@null"
            android:gravity="bottom"
            android:hint="请设置新密码"
            android:inputType="textPassword"
            android:textColor="@color/text_color"
            android:textColorHint="@color/color_line"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:background="@color/color_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        >

        <TextView

            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="确认密码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin16"
            android:background="@null"
            android:gravity="bottom"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:textColor="@color/text_color"
            android:textColorHint="@color/color_line"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="30dp"
        android:text="确定"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/board_oregon"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>