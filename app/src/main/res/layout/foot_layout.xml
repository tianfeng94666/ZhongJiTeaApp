<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/id_fl_tab1"
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:background="@null">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foot_select_style"
            >

            <ImageView
                android:id="@+id/id_ig_home"
                android:layout_marginTop="10dip"
                android:src="@mipmap/home_unchoose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="首页"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="top|right|center"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@+id/tab1_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hint_superscript_red"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/oregon"
                android:textSize="10.0dip"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/id_fl_tab2"
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:background="@null">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foot_select_style"
            >

            <ImageView
                android:id="@+id/iv_mall"
                android:layout_marginTop="10dip"
                android:src="@mipmap/mall_unchoose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tv_mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="茶柜"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="top|right|center"
            android:layout_marginTop="5dip"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:paddingRight="20dip">
            <TextView
                android:id="@+id/tab2_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10.0dip"
                android:textColor="@color/oregon"
                />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/id_fl_tab3"
        style="@style/layout_horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foot_select_style"
            >

            <ImageView
                android:id="@+id/iv_storage"
                android:layout_marginTop="10dip"
                android:src="@mipmap/storage_unchoose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="仓储"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_fl_tab4"
        style="@style/layout_horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foot_select_style"
            >

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_marginTop="10dip"
                android:src="@mipmap/mine_unchoose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我的"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>