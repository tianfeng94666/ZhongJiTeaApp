<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rootview"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:paddingLeft="@dimen/margin33"
        android:paddingRight="@dimen/margin33">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="仓库名称"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_next"
            android:gravity="right|center_vertical"
            android:textColorHint="@color/text_color2"
            android:hint="请选择仓库"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:paddingLeft="@dimen/margin33"
        android:paddingRight="@dimen/margin33">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="茶品名称"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_tea_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_next"
            android:gravity="right|center_vertical"
            android:hint="请选择已购茶品"
            android:textColorHint="@color/text_color2"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:paddingLeft="@dimen/margin33"
        android:paddingRight="@dimen/margin33">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="茶品规格"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_tea_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"

            android:gravity="right|center_vertical"
            android:text="1*28饼"
            android:textColor="@color/text_color2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:paddingLeft="@dimen/margin33"
        android:paddingRight="@dimen/margin33">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="成交数量"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/et_tea_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawablePadding="5dp"
            android:gravity="right|center_vertical"
            android:hint="请输入成交数量"
            android:inputType="numberDecimal|number"
            android:text=""
            android:textColor="@color/text_color2"
            android:textColorHint="@color/text_color2"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:paddingLeft="@dimen/margin33"
        android:paddingRight="@dimen/margin33">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="成交单价"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/et_tea_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawablePadding="5dp"
            android:gravity="right|center_vertical"
            android:hint="请输入成交单价"
            android:inputType="numberDecimal|number"
            android:text=""
            android:textColor="@color/text_color2"
            android:textColorHint="@color/text_color2"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:paddingLeft="@dimen/margin33"
        android:paddingRight="@dimen/margin33">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="成交总额"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_tea_totol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawablePadding="5dp"
            android:gravity="right|center_vertical"

            android:inputType="numberDecimal|number"
            android:text=""
            android:textColor="@color/text_color2"
            android:textColorHint="@color/text_color2"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:paddingLeft="@dimen/margin33"
        android:paddingRight="@dimen/margin33">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="暂存时间至"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_store_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/icon_next"
            android:gravity="right|center_vertical"
            android:text=""
            android:textColor="@color/text_color2"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:layout_marginTop="32dp"
        android:background="@drawable/board_oregon_no_padding"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>