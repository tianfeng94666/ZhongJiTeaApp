<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_rootview"
    android:layout_height="match_parent">
<include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/margin16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head_photo"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/head_photo"
            android:layout_width="91dp"
            android:layout_height="91dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="昵称"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin16"
            android:background="@null"
            android:gravity="bottom"
            android:hint="1-6位中文、字母或数字"
            android:inputType="phone"
            android:textColor="@color/text_color"
            android:textColorHint="@color/color_line"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:background="@color/color_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="密码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin16"
            android:background="@null"
            android:gravity="bottom"
            android:hint="6-15位字母或数字"
            android:inputType="textPassword"
            android:textColor="@color/text_color"
            android:textColorHint="@color/color_line"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:background="@color/color_line" />
    <TextView
        android:id="@+id/tv_regisit"
        android:layout_marginLeft="@dimen/margin33"
        android:layout_marginRight="@dimen/margin33"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/text_normal"
        android:text="注册"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/board_oregon"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
</LinearLayout>